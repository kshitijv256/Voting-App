<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      let token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
      function selectCorrect(id) {
        fetch(`/answers/edit/${id}`, {
          method: "put",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => {
            console.log(err);
          });
      }
      function deleteAnswer(id) {
        fetch(`/answers/${id}`, {
          method: "delete",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => {
            console.log(err);
          });
      }
    </script>
    <title>Edit Question</title>
  </head>
  <body>
    <div class="bg-blue-400 font-sans text-2xl">
      <div class="flex flex-row justify-between pr-4">
        <h1 class="w-3/5 p-5 text-white">The Voting App</h1>
        <div class="flex flex-row justify-end">
          <div class="bg-blue-400 hover:bg-blue-300 cursor-pointer flex items-center">
            <a href="/elections/<%= question.electionId %>" class="text-white px-2">
              Back
            </a>
          </div>
          <div class="bg-blue-400 hover:bg-blue-300 cursor-pointer flex items-center">
            <a href="/elections" class="text-white px-2">
              All Elections
            </a>
          </div>
          <div class="bg-blue-400 hover:bg-blue-300 cursor-pointer flex items-center">
            <a href="/logout" class="text-white px-2">
              Logout
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-row justify-center">
      <div class="shadow-xl p-4 mt-4 rounded-xl w-3/5">
        <h1 class="text-2xl font-bold mb-4">Edit Question</h1>
        <form action="/questions/<%= question.id %>" method="post">
          <div class="flex-auto">
            <label for="body">Question</label>
            <input
              type="text"
              name="title"
              id="title"
              class="rounded w-full p-2 border-2 border-blue-300"
              value="<%= question.title %>"
            />
          </div>
          <div class="flex-auto">
            <label for="body">Description</label>
            <input
              type="text"
              name="description"
              id="description"
              class="rounded w-full p-2 border-2 border-blue-300"
              value="<%= question.description %>"
            />
          </div>
          <input
            type="hidden"
            name="electionId"
            value="<%= question.electionId %>"
          />
          <div class="flex flex-row w-full justify-end px-2 py-4">
            <button
              class="bg-blue-400 p-2 rounded m-2 hover:bg-blue-500 text-white"
              type="submit"
            >
              Save Changes
            </button>
          </div>
        </form>
        <div class="flex flex-row justify-between mx-4 mt-4">
          <h1 class="text-lg font-semibold">Answers</h1>
          <div
            class="bg-blue-400 rounded p-1 hover:bg-blue-500 text-white hover:cursor-pointer px-2"
          >
            <a href="/answers/<%= question.id %>">+Add more</a>
          </div>
        </div>
        <% for(var i = 0; i < answers.length; i++) { %>
        <div class="flex flex-row mx-4 my-2">
          <form
            action="/answers/edit/<%= answers[i].id %>"
            method="post"
            class="w-full"
          >
            <input
              type="text"
              name="body"
              id="<%= answers[i].id %>"
              class="rounded w-full p-2 border-2 border-blue-300"
              value="<%= answers[i].body %>"
            />
            <input
              type="hidden"
              name="questionId"
              value="<%= answers[i].questionId %>"
            />
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="flex flex-row mt-2">
              <button
                type="submit"
                class="bg-blue-400 p-2 h-3/4 rounded hover:bg-blue-500 text-white"
              >
                Save
              </button>
              <a
                href="#"
                onclick="selectCorrect(`<%= answers[i].id %>`)"
                class="pl-2"
              >
                <div
                  class="flex-auto bg-green-400 rounded px-1 py-2 hover:bg-green-500 text-white hover:cursor-pointer"
                >
                  Correct
                </div>
              </a>
              <a
                href="#"
                onclick="deleteAnswer('<%= answers[i].id %>')"
                class="pl-2"
              >
                <div
                  class="flex-auto bg-red-400 rounded px-1 py-2 hover:bg-red-500 text-white hover:cursor-pointer"
                >
                  Delete
                </div>
              </a>
            </div>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
