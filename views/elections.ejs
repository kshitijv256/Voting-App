<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Voting App</title>
  </head>
  <body>
    <div class="p-5 bg-blue-400 font-sans text-2xl">
      <span>
        <h1>The app is running</h1>
        <p class="text-green-200"><a href="/">Home page</a></p>
      </span>
    </div>
    <div class="flex flex-col items-center">
      <% for(var i = 0; i < elections.length; i++) { %>
      <div class="w-4/5 shadow-xl p-4 mt-4 rounded-md">
        <h1 class="text-2xl font-bold mb-4"><%= elections[i].title %></h1>
        <p class="text-lg text-gray-600 mb-4"><%= elections[i].description %></p>
        <p class="text-lg text-gray-600 mb-4">5 questions || 10 voters</p>
        <a
          href="/elections/<%= elections[i]._id %>"
          class="bg-blue-500 p-2 rounded m-2 hover:bg-blue-600"
          >View details</a
        >
      </div>
      <% } %>
    </div>
  </body>
</html>
