<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      let token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
      function deleteElection(id) {
        fetch(`/elections/${id}`, {
          method: "delete",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => {
            console.log(err);
          });
      }
    </script>
    <title>All Elections</title>
  </head>
  <body>
    <div class="bg-blue-400 font-sans text-2xl">
      <div class="flex flex-row justify-between pr-4">
        <h1 class="w-3/5 p-5 text-white">Welcome, <%= name %></h1>
        <div class="flex flex-row justify-end">
          <div class="bg-blue-400 hover:bg-blue-300 cursor-pointer flex items-center">
            <a href="/logout" class="text-white px-2">
              Logout
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-row justify-end">
      <div class="rounded bg-blue-400 hover:bg-blue-500 p-2 mt-4 mr-4 text-white">
        <a href="/elections/add">+Add Election</a>
      </div>
    </div>
    <div class="flex flex-col items-center">
      <% for(var i = 0; i < elections.length; i++) { %>
      <div class="w-4/5 shadow-xl p-4 mt-4 rounded-md">
        <h1 class="text-2xl font-bold mb-4"><%= elections[i].title %></h1>
        <p class="text-lg text-gray-600 mb-4">
          <%= elections[i].description %>
        </p>
        <a
          href="/elections/<%= elections[i].id %>"
          class="bg-blue-400 p-2 rounded m-2 hover:bg-blue-500 text-white"
          >View details</a
        >
        <a
          href="#"
          onclick="deleteElection(`<%= elections[i].id %>`)"
          class="bg-red-400 p-2 rounded m-2 hover:bg-red-500 text-white"
          >Delete</a
        >
      </div>
      <% } %>
    </div>
  </body>
</html>
